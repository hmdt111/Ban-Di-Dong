@model IEnumerable<Ban_Di_Dong.ViewModels.MenuLoaiVM>
<div class="col-lg-12">
    <div class="mb-3">
        <h4>Danh Mục</h4>
        <ul class="list-unstyled fruite-categorie">
            @foreach(var item in Model)
            {
                <li>
                    <div class="d-flex justify-content-between fruite-name">
                        <a asp-controller="Product" asp-action="Index" asp-route-loai="@item.CateID">
                            <i class="fas fa-apple-alt me-2"></i>@item.Name
                        </a>
                        <span>@item.soLuong</span>
                    </div>
                </li>
                
            }
            
           
        </ul>
    </div>
</div>